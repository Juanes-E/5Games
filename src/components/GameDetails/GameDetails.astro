---
const { name, image, video, description, size, platform, platformUrl } = Astro.props;
---

<section class="game-details">
  <div class="game-details__media">
    <img src={`/assets/images/games/${image}`} alt={`Imagen de ${name}`} loading="lazy" class="game-details__image" />
    
    {video && (
      <div class="game-details__video">
        <iframe 
          src={video} 
          title={`Gameplay de ${name}`}
          allowfullscreen
          loading="lazy"
          frameborder="0"
        />
      </div>
    )}
  </div>

  <div class="game-details__content">
    <h1 class="game-details__title">{name}</h1>
    <p class="game-details__description">{description}</p>
    <p class="game-details__meta">ðŸ“¦ TamaÃ±o: {size}</p>

    <a href={platformUrl} target="_blank" rel="noopener noreferrer" class="game-details__cta">
      Jugar en {platform}
    </a>
  </div>
</section>

<style>
  .game-details {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem;
    max-width: 1024px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .game-details {
      flex-direction: row;
    }
  }

  .game-details__media {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .game-details__image {
    width: 100%;
    border-radius: 0.5rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .game-details__video iframe {
    width: 100%;
    height: 300px;
    border-radius: 0.5rem;
  }

  .game-details__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .game-details__title {
    font-size: 2rem;
    font-weight: bold;
  }

  .game-details__description {
    font-size: 1rem;
    line-height: 1.6;
    color: #ccc;
  }

  .game-details__meta {
    font-weight: 500;
    margin-top: 1rem;
  }

  .game-details__cta {
    display: inline-block;
    background: #22c55e;
    color: white;
    padding: 0.75rem 1.5rem;
    margin-top: 1rem;
    border-radius: 0.375rem;
    text-align: center;
    transition: background 0.3s ease;
  }

  .game-details__cta:hover {
    background: #16a34a;
  }
</style>
