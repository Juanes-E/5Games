---
const { name, image, slug } = Astro.props;
---

<a href={`/games/${slug}`} class="game-card">
  <div class="image-container">
    <img 
      src={image} 
      alt={`Imagen de ${name}`} 
      loading="lazy" 
      onerror="this.style.display='none'" 
    />
  </div>
  <h2>{name}</h2>
</a>

<style>
  .game-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: #1e293b;
    padding: 1rem;
    border-radius: 0.5rem;
    transition: transform 0.2s ease;
  }

  .game-card:hover {
    transform: scale(1.02);
  }

  .image-container {
    height: 200px; /* o la altura que prefieras */
    background-color: #334155; /* gris oscuro de fondo */
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-bottom: 0.5rem;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  h2 {
    font-size: 1.2rem;
    text-align: center;
  }
</style>


