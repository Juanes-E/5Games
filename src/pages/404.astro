import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout>
  <section class="error-page">
    <h1 class="error-page__title">404 - PÃ¡gina no encontrada</h1>
    <p class="error-page__message">Lo sentimos, no pudimos encontrar lo que buscas.</p>

    <a href="/" class="error-page__link">Volver al inicio</a>
  </section>
</MainLayout>

<style>
  .error-page {
    @apply flex flex-col items-center justify-center min-h-[60vh] text-center p-8;
  }

  .error-page__title {
    @apply text-4xl font-bold text-red-500 mb-4;
  }

  .error-page__message {
    @apply text-lg text-gray-300 mb-6;
  }

  .error-page__link {
    @apply bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition;
  }
</style>
